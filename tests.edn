#kaocha/v1
{:plugins [:kaocha.plugin.alpha/info
           :profiling
           :print-invocations
           :hooks
           :notifier]

 :tests   [{:id         :unit
            :test-paths ["test/shared"
                         "test/unit"]}
           {:id                  :integration
            :type                :kaocha.type/cucumber
            :test-paths          ["test/shared"
                                  "test/features"]
            :cucumber/glue-paths ["test/step_definitions"]}]

 :kaocha.hooks/pre-load [kaocha.assertions/load-assertions]}
